}

<h1 class="display-4">Subtraction</h1>

<form asp-action="Subtract">
    <div class="form-group">
        <label class="control-label">Enter First Number</label>
        <input name="number1" class="form-control" value="@ViewData["FirstNumber"]" />
    </div>
    <div class="form-group">
        <label class="control-label">Enter Second Number</label>
        <input name="number2" class="form-control" value="@ViewData["SecondNumber"]" />
    </div>
    <p class="mt-2">
        <strong>
            The difference of this two numbers are @Model
        </strong>
    </p>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Subtract" />
    </div>
</form>